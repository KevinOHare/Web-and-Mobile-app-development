<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shapes_bk"
    tools:context="com.example.app_project.Shapes3to5Q1" >

    <!-- image of question -->

    <ImageView
        android:id="@+id/change_image"
        android:layout_width="200dp"
        android:layout_height="210dp"
        android:layout_marginLeft="61dp"
        android:layout_marginTop="62dp"
        android:src="@drawable/rectangle" />

    <!-- question asked -->
    
    <TextView
        android:id="@+id/question"
        android:layout_width="270dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/next_page"
        android:layout_marginTop="18dp"
        android:text="What is this shape?"
        android:textColor="#000000"
        android:textSize="25dp"
        android:textStyle="bold" />
    
    <!-- Countdown timer -->
   
       <TextView
        android:id="@+id/timer"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="257dp"
        android:textColor="#ff0000"
        android:textStyle="bold"
        android:textSize="25dp" /> 

    <!-- Button 1 -->

    <Button
        android:id="@+id/button1"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_below="@+id/change_image"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="48dp"
        android:text="circle"
        android:textSize="18dp"
        android:textStyle="bold"
        android:background="#FCEE21"
        android:textAllCaps="false" />

     <!-- Button 2 -->
    
    <Button
        android:id="@+id/button2"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_below="@+id/change_image"
        android:layout_marginLeft="165dp"
        android:layout_marginTop="48dp"
        android:text="rectangle"
        android:textSize="18dp"
        android:textStyle="bold"
        android:background="#FCEE21"
        android:textAllCaps="false"/>

     <!-- Button 3 -->
    
    <Button
        android:id="@+id/button3"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_below="@+id/change_image"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="99dp"
        android:text="square"
        android:textSize="18dp"
        android:textStyle="bold"
        android:background="#FCEE21"
        android:textAllCaps="false"/>

     <!-- Button 4 -->
    
    <Button
        android:id="@+id/button4"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_below="@+id/change_image"
        android:layout_marginLeft="165dp"
        android:layout_marginTop="99dp"
        android:text="triangle"
        android:textSize="18dp"
        android:textStyle="bold"
        android:background="#FCEE21"
        android:textAllCaps="false" />
    
    <!-- Image View for arrow -->
    
    <ImageView
        android:id="@+id/next_page"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/button4"
        android:layout_marginLeft="190dp"
        android:src="@drawable/arrow" />
    
    <!-- Image View for stop watch -->
    
     <ImageView
         android:id="@+id/stop_watch"
         android:layout_width="80dp"
         android:layout_height="60dp"
         android:layout_marginLeft="230dp"
         android:layout_alignParentTop="true"
         android:layout_marginTop="3dp"
         android:layout_marginBottom="200dp"
         android:src="@drawable/timer" />

</RelativeLayout>