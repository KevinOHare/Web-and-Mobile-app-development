<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wordsbackground"
    tools:context="${relativePackage}.${activityClass}" >

    <!-- image of question -->

    <ImageView
        android:id="@+id/change_image"
        android:layout_width="400dp"
        android:layout_height="163dp"
	android:layout_marginTop="102dp"
	android:layout_marginBottom="10dp"
        android:src="@drawable/fifty_three" />

    <!-- question asked -->
    
    <TextView
        android:id="@+id/question"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="12dp"
	android:background="@color/white"
	android:layout_width="wrap_content"
        android:text="How do you write this number\nusing digits?"
        android:textColor="#000000"
        android:textSize="17dp"
        android:textStyle="bold" />
    
    <!-- Countdown timer -->
   
       <TextView
        android:id="@+id/timer"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="320dp"
        android:layout_marginStart="320dp"
        android:textColor="#ff0000"
        android:textStyle="bold"
        android:textSize="25sp" /> 

    <!-- Button 1 -->

    <Button
        android:id="@+id/button1"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_below="@+id/change_image"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="70dp"
        android:text="51"
        android:textSize="18dp"
        android:textStyle="bold"
        android:background="#FCEE21"
        android:textAllCaps="false" />

     <!-- Button 2 -->
    
    <Button
        android:id="@+id/button2"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_below="@+id/change_image"
        android:layout_marginLeft="195dp"
        android:layout_marginTop="70dp"
        android:text="35"
        android:textSize="18dp"
        android:textStyle="bold"
        android:background="#FCEE21"
        android:textAllCaps="false"/>

     <!-- Button 3 -->
    
    <Button
        android:id="@+id/button3"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_below="@+id/change_image"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="130dp"
        android:text="53"
        android:textSize="18dp"
        android:textStyle="bold"
        android:background="#FCEE21"
        android:textAllCaps="false"/>

     <!-- Button 4 -->
    
    <Button
        android:id="@+id/button4"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_below="@+id/change_image"
        android:layout_marginLeft="195dp"
        android:layout_marginTop="130dp"
        android:text="33"
        android:textSize="18dp"
        android:textStyle="bold"
        android:background="#FCEE21"
        android:textAllCaps="false" />
    
    <!-- Image View for arrow -->
    
    <ImageButton
         android:id="@+id/next_page"
         android:layout_width="80dp"
         android:layout_height="60dp"
         android:layout_alignParentBottom="true"
         android:layout_alignRight="@+id/button4"
         android:layout_marginBottom="14dp"
         android:background="@null"
         android:src="@drawable/arrow" />
    
    <!-- Image View for stop watch -->
    
     <ImageView
         android:id="@+id/stop_watch"
         android:layout_width="80dp"
         android:layout_height="60dp"
         android:layout_marginLeft="305dp"
         android:layout_marginStart="305dp"
         android:layout_alignParentTop="true"
         android:layout_marginTop="3dp"
         android:layout_marginBottom="200dp"
         android:src="@drawable/timer" />

</RelativeLayout>
