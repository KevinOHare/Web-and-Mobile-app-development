<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mathsbackground"
    tools:context="${relativePackage}.${activityClass}" >

    <!-- image of question -->

    <ImageView
        android:id="@+id/change_image"
        android:layout_width="220dp"
        android:layout_height="140dp"
        android:layout_marginLeft="53dp"
        android:layout_marginTop="95dp"
        android:src="@drawable/pence10" />

    <!-- question asked -->
    
    <TextView
        android:id="@+id/question"
        android:layout_width="270dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/stop_watch"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"
        android:text="How much is this coin worth?"
        android:textColor="#000000"
        android:textSize="21dp"
        android:textStyle="bold" />
    
    <!-- Countdown timer -->
   
       <TextView
        android:id="@+id/timer"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="257dp"
        android:textColor="#ff0000"
        android:textStyle="bold"
        android:textSize="25dp" /> 

    <!-- Button 1 -->

    <Button
        android:id="@+id/button1"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_below="@+id/change_image"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="48dp"
        android:text="20p"
        android:textSize="18dp"
        android:textStyle="bold"
        android:background="#FCEE21"
        android:textAllCaps="false" />

     <!-- Button 2 -->
    
    <Button
        android:id="@+id/button2"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_below="@+id/change_image"
        android:layout_marginLeft="165dp"
        android:layout_marginTop="48dp"
        android:text="1p"
        android:textSize="18dp"
        android:textStyle="bold"
        android:background="#FCEE21"
        android:textAllCaps="false"/>

     <!-- Button 3 -->
    
    <Button
        android:id="@+id/button3"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_below="@+id/change_image"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="99dp"
        android:text="Â£10"
        android:textSize="18dp"
        android:textStyle="bold"
        android:background="#FCEE21"
        android:textAllCaps="false"/>

     <!-- Button 4 -->
    
    <Button
        android:id="@+id/button4"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_below="@+id/change_image"
        android:layout_marginLeft="165dp"
        android:layout_marginTop="99dp"
        android:text="10p"
        android:textSize="18dp"
        android:textStyle="bold"
        android:background="#FCEE21"
        android:textAllCaps="false" />
    
    <!-- Image View for arrow -->
    
    <ImageButton
        android:id="@+id/next_page"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/button4"
        android:layout_marginLeft="190dp"
        android:src="@drawable/arrow" />
    
    <!-- Image View for stop watch -->
    
     <ImageView
         android:id="@+id/stop_watch"
         android:layout_width="80dp"
         android:layout_height="60dp"
         android:layout_marginLeft="230dp"
         android:layout_alignParentTop="true"
         android:layout_marginTop="3dp"
         android:layout_marginBottom="200dp"
         android:src="@drawable/timer" />

</RelativeLayout>
